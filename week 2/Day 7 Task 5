//power of 2

class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n==1)
            return true;
        int x=n;
        int cnt=0;
        while(x>1){
            x=x/2;
            cnt++;
        }
        if(pow(2,cnt)==n)
            return true;
        else
            return false;
        
    }
};
